<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.employeezy.adiprojecttwo.PlayerProfileActivity">

    <TextView
        android:id="@+id/profile_player_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/profile_player_name"
        android:layout_below="@+id/profile_player_ID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/profile_player_number"
        android:layout_below="@+id/profile_player_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/profile_rookie_year"
        android:layout_below="@+id/profile_player_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/profile_position"
        android:layout_below="@+id/profile_rookie_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
